<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_category">

    <TextView
        android:id="@+id/effect_of_up_time_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:paddingBottom="@dimen/padding_bottom_category_title"
        android:paddingEnd="@dimen/padding_category_end"
        android:paddingStart="@dimen/padding_category_start"
        android:paddingTop="@dimen/padding_top_category_title"
        android:text="@string/effect_of_up_time_group"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold" />

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/effect_of_up_time_group">

        <TextView
            android:id="@+id/effect_of_up_time_quoted_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/effect_of_up_time_quoted_title"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@+id/effect_of_up_time_quoted_val"
            app:layout_constraintEnd_toStartOf="@+id/effect_of_up_time_quoted_val"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/effect_of_up_time_quoted_val" />

        <newsoft.calculator.CustomTextView
            android:id="@+id/effect_of_up_time_quoted_val"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>