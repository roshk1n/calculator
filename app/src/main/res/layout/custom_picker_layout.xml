<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/value_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:background="@drawable/background_edit_text"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/up_btn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/background_top_right_corner"
        android:src="@drawable/ic_arrow_up"
        app:layout_constraintStart_toEndOf="@+id/value_tv"
        app:layout_constraintTop_toTopOf="@+id/value_tv"
        app:layout_constraintBottom_toTopOf="@+id/down_btn"/>

    <ImageButton
        android:id="@+id/down_btn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/background_bottom_right_corner"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintBottom_toBottomOf="@+id/value_tv"
        app:layout_constraintTop_toBottomOf="@+id/up_btn"
        app:layout_constraintStart_toEndOf="@+id/value_tv" />

</android.support.constraint.ConstraintLayout>